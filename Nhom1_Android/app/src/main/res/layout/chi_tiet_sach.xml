<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_chitietsach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="Chi tiết sách"
            android:textColor="#000"
            android:textSize="40sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvMaS1"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Mã sách:" />

            <TextView
                android:id="@+id/tvMaS2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTenS1"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Tên sách:" />

            <TextView
                android:id="@+id/tvTenS2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTacGia1"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Tác giả:" />

            <TextView
                android:id="@+id/tvTacGia2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvViTri1"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Vị trí:" />

            <TextView
                android:id="@+id/tvViTri2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSoLuong1"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Số lượng:" />

            <TextView
                android:id="@+id/tvSoLuong2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNamXB1"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Năm xuất bản:" />

            <TextView
                android:id="@+id/tvNamXB2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTinhTrang1"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Tình trạng:" />

            <TextView
                android:id="@+id/tvTinhTrang2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom">
        <Button
            android:id="@+id/btnThoat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FBF199"
            android:text="Thoát" />
    </RelativeLayout>
</FrameLayout>